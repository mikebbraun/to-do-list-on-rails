<p id="notice"><%= notice %></p>

<div class="container">
<h1>Things To Do List</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.title %></td>
        <td><%= todo_item.description %></td>
        <td><%= todo_item.due_date %></td>
        <td><button class="btn btn-default" type="submit"><%= link_to 'Show', todo_item %></button></td>
        <td><button class="btn btn-default" type="submit"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></button></td>
        <td><button class="btn btn-default" type="submit"><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div><input type="text_field" class="notes" value="add notes"></div>
<span><button class="btn btn-default" type="submit"><%= link_to 'New Todo Item', new_todo_item_path %></button></span>
</div>
